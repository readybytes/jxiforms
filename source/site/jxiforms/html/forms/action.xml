<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset addfieldpath="/components/com_jxiforms/jxiforms/html/fields">

		<field name="action_id" type="hidden"
			default="0"
			label="COM_JXIFORMS_ACTION_ID_LABEL"
			description="COM_JXIFORMS_ACTION_ID_DESC"
			readonly="true"
			required="true"
			size="10"
		/>

		<field name="title" type="text"
			label="COM_JXIFORMS_ACTION_TITLE_LABEL"
			description="COM_JXIFORMS_ACTION_TITLE_DESC"
			size="45" class="required"
		/>
		
		<field name="type" type="text"
			label="COM_JXIFORMS_ACTION_TYPE_LABEL"
			description="COM_JXIFORMS_ACTION_TYPE_DESC"
			size="45" class="required" readonly="true"
		/>
		
		<field name="published" type="list"
			label="COM_JXIFORMS_ACTION_PUBLISHED_LABEL" 
			description="COM_JXIFORMS_ACTION_PUBLISHED_DESC"
			class="inputbox" 
			size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		
		<field name="is_core" type="list"
			label="COM_JXIFORMS_ACTION_IS_CORE_LABEL" 
			description="COM_JXIFORMS_ACTION_IS_CORE_DESC"
			class="inputbox" 
			size="1" default="0" >
			<option value="0">COM_JXIFORMS_NO</option>
			<option value="1">COM_JXIFORMS_YES</option>
		</field>
		
		<field name="description" type="editor"
			default=""
			description="COM_JXIFORMS_ACTION_DESCRIPTION_DESC"
			label="COM_JXIFORMS_ACTION_DESCRIPTION_LABEL" 
		/>

	</fieldset>
	
</form>
