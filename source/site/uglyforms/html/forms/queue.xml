<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset addfieldpath="/components/com_uglyforms/uglyforms/html/fields">

		<field name="queue_id" 
			   type="hidden"
		       default="0"
			   label="COM_UGLYFORMS_QUEUE_QUEUE_ID_LABEL"
			   description="COM_UGLYFORMS_QUEUE_QUEUE_ID_DESC"
				/>

		<field name="input_id" 
			   type="text"
			   label="COM_UGLYFORMS_QUEUE_INPUT_ID_LABEL"
			   description="COM_UGLYFORMS_QUEUE_INPUT_ID_DESC"
				/>
		
		<field name="action_id" 
			   type="text"
			   label="COM_UGLYFORMS_QUEUE_ACTION_ID_LABEL"
			   description="COM_UGLYFORMS_QUEUE_ACTION_ID_DESC"
				/>
		
		<field name="approved" 
		       type="list"
			   label="COM_UGLYFORMS_QUEUE_APPROVED_LABEL" 
			   description="COM_UGLYFORMS_QUEUE_APPROVED_DESC"
			   class="inputbox" 
			   size="1" default="1">
			   <option value="1">COM_UGLYFORMS_YES</option>
			   <option value="0">COM_UGLYFORMS_NO</option>
		</field>
		
		<field name="approval_key" 
			   type="text"
			   label="COM_UGLYFORMS_QUEUE_APPROVAL_KEY_LABEL"
			   description="COM_UGLYFORMS_QUEUE_APPROVAL_KEY_DESC"
			   default=""
				/>
		
		<field name="status" type="uglyforms.status"
			   label="COM_UGLYFORMS_QUEUE_STATUS_LABEL"
		   	   description="COM_UGLYFORMS_QUEUE_STATUS_DESC"			
			   class="inputbox" 
			   default="0" />
		
		<field	name="created_date"
			    type="calendar"
			    label="COM_UGLYFORMS_QUEUE_CREATED_DATE_LABEL"
			    description="COM_UGLYFORMS_QUEUE_CREATED_DATE_DESC"
			    readonly="true"
			    format="%Y-%m-%d %H:%M:%S"
			    filter="user_utc"
				/>
		
		<field name="token" 
			   type="text"
			   label="COM_UGLYFORMS_QUEUE_TOKEN_LABEL"
			   description="COM_UGLYFORMS_QUEUE_TOKEN_DESC"
			   default=""
				/>
	</fieldset>
	
</form>
