<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset addfieldpath="/components/com_uglyforms/uglyforms/html/fields">

		<field name="input_id" type="hidden"
			default="0"
			label="COM_UGLYFORMS_INPUT_ID_LABEL"
			description="COM_UGLYFORMS_INPUT_ID_DESC"
			readonly="true"
			required="true"
			size="10"
		/>

		<field name="title" type="text"
			label="COM_UGLYFORMS_INPUT_TITLE_LABEL"
			description="COM_UGLYFORMS_INPUT_TITLE_DESC"
			size="45" required="true"
		/>
		
		<field name="post_url" type="text"
			label="COM_UGLYFORMS_INPUT_POST_URL_LABEL"
			description="COM_UGLYFORMS_INPUT_POST_URL_DESC"
			size="60" readonly="true"
		/>
		
		<field name="redirect_url" type="text"
			label="COM_UGLYFORMS_INPUT_REDIRECT_URL_LABEL"
			description="COM_UGLYFORMS_INPUT_REDIRECT_URL_DESC"
			size="45"
		/>
		<field name="published" type="radio"
			label="COM_UGLYFORMS_INPUT_PUBLISHED_LABEL" 
			description="COM_UGLYFORMS_INPUT_PUBLISHED_DESC"
			class="btn-group" 
			size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="description" type="textarea"
			rows="2" cols="40"
			default=""
			description="COM_UGLYFORMS_INPUT_DESCRIPTION_DESC"
			label="COM_UGLYFORMS_INPUT_DESCRIPTION_LABEL" 
		/>
		
		<field name="html" type="textarea"
			rows="20" cols="45"
			class="jxif-textarea"
			default=""
			description="COM_UGLYFORMS_INPUT_HTML_DESC"
			label="COM_UGLYFORMS_INPUT_HTML_LABEL" 
		/>

	</fieldset>
	
	<fields name="advance">
		<fieldset name="menu-attributes" label="COM_UGLYFORMS_INPUT_MENU_ATTRIBUTES_FIELDSET_LABEL">
			<field name="menu_title" 
				   type="text"
				   label="COM_UGLYFORMS_INPUT_ADVANCE_MENU_TITLE_LABEL"
				   description="COM_UGLYFORMS_INPUT_ADVANCE_MENU_TITLE_DESC"
				   required="true"
				   />
				   
			<field name="menu_alias" 
				   type="text"
				   label="COM_UGLYFORMS_INPUT_ADVANCE_MENU_ALIAS_LABEL"
				   description="COM_UGLYFORMS_INPUT_ADVANCE_MENU_ALIAS_DESC"
				   />
				   
			<field name="menu_location" 
				   type="menu"
				   label="COM_UGLYFORMS_INPUT_ADVANCE_MENU_LOCATION_LABEL"
				   description="COM_UGLYFORMS_INPUT_ADVANCE_MENU_LOCATION_DESC"
				   required="true"
				   />
				   
		</fieldset>
	</fields>
	
</form>
