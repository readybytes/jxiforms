<?xml version="1.0" encoding="UTF-8"?>

<config>
	<name>Github-Milestone</name>
    <icon>githubmilestone.png</icon>
       <description>
    	<![CDATA[<a href="https://github.com/" target="_blank" >Github</a> is a web-based hosting service for projects that use the Git revision control system.<br> 
		This action can be used to create milestone in github on form submission.<br>
		]]>
	</description>
	<help>
		<![CDATA[
		<br>Github-Milestone action requires cURL to be installed on your server.<br>
		You can mention custom Milestone title and description based on customer input.<br>
		With reference to the example, you can use [[milestone_title]] and [[description]] for user input values.<br>
		<b>Important : </b> If any repository lies under an organization then it is mandatory to enter the organization name.
		]]>
	</help>
	<code>
	<![CDATA[
    	<pre class="jxif-example-code">
<b>&lt;form name="form_name" method="POST" action="form_post_url"&gt;<br>
	Milestone Name : &lt;input name="milestone_title" type="text" size="30" /&gt;<br>
   	Description    : &lt;textarea name="description" rows="2" cols="50" &gt;&lt;/textarea&gt;<br>
                                &lt;input type="submit" name="submit" value="Submit" /&gt;
&lt;/form&gt;</b>
		</pre>
		]]>
	</code>
		<fields name="action_params">
		
			<fieldset name="parameters" addfieldpath="/components/com_uglyforms/uglyforms/html/fields">

				<field name="username" type="text"
					label="COM_UGLYFORMS_ACTION_GITHUB_USERNAME_LABEL"
					description="COM_UGLYFORMS_ACTION_GITHUB_USERNAME_DESC"
					default=""
					required="true"
				/>
				
				<field name="password" type="password"
					label="COM_UGLYFORMS_ACTION_GITHUB_PASSWORD_LABEL"
					description="COM_UGLYFORMS_ACTION_GITHUB_PASSWORD_DESC"
					default=""
					required="true"
				/>
				
				<field name="repository" type="text"
					label="COM_UGLYFORMS_ACTION_GITHUBMILESTONE_REPOSITORY_LABEL"
					description="COM_UGLYFORMS_ACTION_GITHUBMILESTONE_REPOSITORY_DESC"
					default=""
				/>
				
				<field name="organization" type="text"
					label="COM_UGLYFORMS_ACTION_GITHUB_ORGANIZATION_LABEL"
					description="COM_UGLYFORMS_ACTION_GITHUB_ORGANIZATION_DESC"
					default=""
				/>
				
				<field name="milestone_title" type="textarea"
					label="COM_UGLYFORMS_ACTION_GITHUB_MILESTONE_LABEL"
					description="COM_UGLYFORMS_ACTION_GITHUBMILESTONE_DESC"
					default=""
					required="true"
				/>
				
				<field name="state" type="text"
					label="COM_UGLYFORMS_ACTION_GITHUBMILESTONE_STATE_LABEL"
					description="COM_UGLYFORMS_ACTION_GITHUBMILESTONE_STATE_DESC"
					default=""
				/>
				
				<field name="milestone_description" type="textarea"
					label="COM_UGLYFORMS_ACTION_GITHUBMILESTONE_DESCRIPTION_LABEL"
					description="COM_UGLYFORMS_ACTION_GITHUBMILESTONE_DESCRIPTION_DESC"
					default=""
				/>
				
				<field name="due_on" type="calendar"
					label="COM_UGLYFORMS_ACTION_GITHUBMILESTONE_DUE_ON_LABEL"
					description="COM_UGLYFORMS_ACTION_GITHUBMILESTONE_DUE_ON_DESC"
					default=""
				/>

			</fieldset>
		</fields>
</config>
